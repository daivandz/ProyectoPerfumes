@model IEnumerable<ProyectoP.Web.Models.Comment>

@{
    ViewBag.Title = "Index";
}
    <div class="container espacio">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Crear nuevo", "Create")
        </p>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Perfume.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Coment)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Perfume.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coment)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-default btn-success" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-default btn-primary" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-default btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>